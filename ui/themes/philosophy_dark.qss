    font-size: 11px;
}

QPushButton#concept_detail_button:hover {
    background: rgba(94, 129, 172, 0.2);
}

QLabel#concept_title {
    color: #ECEFF4;
    font-size: 16px;
    font-weight: 500;
}

QLabel#concept_info {
    color: #81A1C1;
    font-size: 11px;
