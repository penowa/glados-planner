}

QLabel#minimal_book_author {
    color: #81A1C1;
    font-size: 11px;
    font-weight: 400;
}

/* ============ AGENDA E TAREFAS ============ */
/* Widgets de tarefa minimalista */
QWidget#minimal_task_widget {
    background: transparent;
    border-radius: 8px;
}

QWidget#minimal_task_widget:hover {
    background: rgba(129, 161, 193, 0.1);
}

QLabel#minimal_task_desc {
    color: #5E81AC;
    font-size: 11px;
    font-weight: 400;
}

QLabel#minimal_task_time {
    color: #81A1C1;
    font-size: 10px;
    font-weight: 400;
}

QLabel#minimal_task_status {
    font-size: 12px;
}

/* Contador de agenda */
QLabel#agenda_count_minimal {
    color: #81A1C1;
    font-size: 11px;
    font-weight: 400;
}

/* ============ GLADOS ASSISTANT ============ */
/* Campo de entrada */
QLineEdit#minimal_glados_input {
    background: #3B4252;
    color: #ECEFF4;
    border: 1px solid #4C566A;
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 11px;
    selection-background-color: #5e81ac;
}

QLineEdit#minimal_glados_input:focus {
    border-color: #5E81AC;
    background: #434C5E;
}

QLineEdit#minimal_glados_input:disabled {
    background: rgba(76, 86, 106, 0.5);
    color: #81A1C1;
}

/* Mensagens do GLaDOS */
QLabel#glados_message_minimal {
    color: #ECEFF4;
    font-size: 11px;
    font-weight: 400;
    background: rgba(136, 192, 208, 0.05);
    border-radius: 8px;
    padding: 12px;
}

QWidget#glados_message_container {
    background: transparent;
}

/* ============ BIBLIOTECA ============ */
/* Cards de livro */
QFrame#book_card {
    background: rgba(59, 66, 82, 0.3);
    border: 1px solid #4C566A;
    border-radius: 12px;
