    font-weight: 500;
}

QPushButton#success_button:hover {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                                stop:0 #abcc94, stop:1 #97ccc9);
}

/* Botão com cor vermelha para ações perigosas */
QPushButton#danger_button {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                                stop:0 #bf616a, stop:1 #c16068);
    color: #ECEFF4;
    border: none;
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 11px;
    font-weight: 500;
}

QPushButton#danger_button:hover {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                                stop:0 #c9716b, stop:1 #c9716b);
}

/* ============ SCROLLBARS ============ */
QScrollBar:vertical {
    background: #3B4252;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #4C566A;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: #81A1C1;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

QScrollBar:horizontal {
    background: #3B4252;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background: #4C566A;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background: #81A1C1;
}

/* ============ SEPARADORES ============ */
QFrame {
    color: #4C566A;
}

/* ============ PROGRESS BARS ============ */
QProgressBar {
    border: none;
    background-color: #4C566A;
    border-radius: 4px;
    text-align: center;
    color: #ECEFF4;
    height: 6px;
}

QProgressBar::chunk {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
                                stop:0 #5e81ac, stop:1 #88c0d0);
    border-radius: 4px;
}

/* ============ COMBO BOXES ============ */
QComboBox {
    background: #3B4252;
    color: #ECEFF4;
    border: 1px solid #4C566A;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 11px;
    min-height: 32px;
}

QComboBox:hover {
    border-color: #5E81AC;
    background: #434C5E;
}

QComboBox::drop-down {
    border: none;
    width: 24px;
}

QComboBox::down-arrow {
    image: none;
    width: 12px;
    height: 12px;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 6px solid #81A1C1;
}

QComboBox QAbstractItemView {
    background: #3B4252;
    border: 1px solid #4C566A;
    border-radius: 8px;
    selection-background-color: #5e81ac;
    selection-color: #ECEFF4;
    font-size: 11px;
}

/* ============ TOOLTIPS ============ */
QToolTip {
    background: #2E3440;
    color: #ECEFF4;
    border: 1px solid #4C566A;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 11px;
    opacity: 230;
}

/* ============ PLACEHOLDER MESSAGES ============ */
QLabel#placeholder_message {
    color: #81A1C1;
    font-size: 11px;
    font-weight: 400;
}

