/* philosophy_dark.qss - Tema Nórdico sem variáveis CSS */

/* ============ APLICAÇÃO PRINCIPAL ============ */
/* Alterar PhilosophyPlanner para QMainWindow e adicionar regras para widgets gerais */
QMainWindow {
    background-color: #2E3440;
    color: #5E81AC;
    font-family: "FiraCode Nerd Font Propo", monospace;
    font-size: 12px;
}

/* Garantir que o widget central tenha o fundo correto */
QWidget#main_central_widget {
    background-color: #2E3440;
}

/* Aplicar fundo a todos os QWidget por padrão */
QWidget {
    background-color: #2E3440;
    color: #5E81AC;
    font-family: "FiraCode Nerd Font Propo", monospace;
    font-size: 12px;
    selection-background-color: #5e81ac;
    selection-color: #ECEFF4;
}

/* Garantir que QScrollArea herde o fundo corretamente */
QScrollArea {
    background-color: #2E3440;
    border: none;
}

QScrollArea > QWidget > QWidget {
    background-color: #2E3440;
}

/* ============ DASHBOARD ============ */
QWidget#dashboard_view {
    background: transparent;
}

QWidget#content_widget {
    background: transparent;
}

/* Cabeçalho minimalista */
QWidget#minimal_header {
    background: transparent;
}

QLabel#minimal_greeting {
    color: #5E81AC;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: 0.5px;
}

QLabel#minimal_date {
    color: #81A1C1;
    font-size: 11px;
    font-weight: 400;
}

/* Títulos de seção */
QLabel#section_title_minimal {
    color: #81A1C1;
    font-size: 14px;
    font-weight: 500;
    padding-bottom: 8px;
    border-bottom: 2px solid #4C566A;
}

QLabel#section_subtitle_minimal {
    color: #88C0D0;
    font-size: 12px;
    font-weight: 500;
}

/* Estados vazios */
QLabel#empty_state_minimal {
    color: #81A1C1;
    font-size: 11px;
    font-weight: 400;
}

QLabel#loading_text {
    color: #81A1C1;
    font-size: 11px;
    font-weight: 400;
}

/* ============ BOTÕES PRINCIPAIS ============ */
/* Botão primário - usando frost como base */
QPushButton#minimal_button {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                                stop:0 #81a1c1, stop:1 #88c0d0);
    color: #ECEFF4;
    border: none;
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 11px;
    font-weight: 500;
    min-height: 36px;
    min-width: 120px;
}

QPushButton#minimal_button:hover {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                                stop:0 #8aa9c9, stop:1 #90c8d8);
}

QPushButton#minimal_button:pressed {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
                                stop:0 #7191b1, stop:1 #78b0c0);
}

QPushButton#minimal_button:disabled {
    background: rgba(76, 86, 106, 0.5);
    color: #81A1C1;
}

/* Botão secundário - usando blue como contraste */
QPushButton#minimal_button_secondary {
    background: transparent;
    color: #81A1C1;
    border: 1px solid #4C566A;
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 11px;
    font-weight: 500;
    min-height: 36px;
}

QPushButton#minimal_button_secondary:hover {
    border-color: #5E81AC;
    color: #5E81AC;
    background: rgba(129, 161, 193, 0.1);
}

QPushButton#minimal_button_secondary:pressed {
    background: rgba(94, 129, 172, 0.2);
}

/* Botão de texto minimalista */
QPushButton#text_button_minimal {
    background: transparent;
    color: #81A1C1;
    border: none;
    padding: 8px 0;
    font-size: 11px;
}

QPushButton#text_button_minimal:hover {
    color: #5E81AC;
}

/* Botão de ação rápida como link */
QPushButton#minimal_action_link {
    background: transparent;
    color: #81A1C1;
    border: none;
    padding: 8px 12px;
    border-radius: 4px;
    font-size: 10px;
}

QPushButton#minimal_action_link:hover {
    color: #88C0D0;
    background: rgba(129, 161, 193, 0.1);
}

/* Botão de ícone */
QPushButton#minimal_icon_button {
    background: #5e81ac;
    color: #ECEFF4;
    border: none;
    border-radius: 8px;
    padding: 12px;
    font-size: 12px;
    font-weight: 500;
}

QPushButton#minimal_icon_button:hover {
    background: #6a8db8;
}

/* ============ NAVEGAÇÃO ============ */
/* Botões de navegação principal */
QPushButton#navigation_button {
    background: transparent;
    color: #81A1C1;
    border: 1px solid #4C566A;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 11px;
    font-weight: 500;
}

QPushButton#navigation_button:hover {
    border-color: #5E81AC;
    color: #5E81AC;
    background: rgba(129, 161, 193, 0.1);
}

QPushButton#navigation_button:pressed {
    background: rgba(94, 129, 172, 0.2);
}

/* Botões de navegação em cards */
QPushButton#nav_card_button {
    background: rgba(59, 66, 82, 0.3);
    color: #D8DEE9;
    border: 1px solid #4C566A;
    border-radius: 12px;
    padding: 16px;
    font-size: 11px;
    text-align: center;
    min-height: 80px;
}

QPushButton#nav_card_button:hover {
    background: rgba(94, 129, 172, 0.1);
    border-color: #5E81AC;
    color: #81A1C1;
}

/* Botões de navegação rápida */
QPushButton#nav_quick_button {
    background: transparent;
    color: #81A1C1;
    border: 1px solid #4C566A;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 11px;
}

QPushButton#nav_quick_button:hover {
    border-color: #5E81AC;
    color: #5E81AC;
    background: rgba(129, 161, 193, 0.1);
}

/* ============ ELEMENTOS DE DASHBOARD ============ */
/* Títulos de view */
QLabel#view_title {
    color: #5E81AC;
    font-size: 18px;
    font-weight: 500;
}

/* Títulos de seção */
QLabel#section_label {
    color: #81A1C1;
    font-size: 14px;
    font-weight: 500;
    border-bottom: 1px solid #4C566A;
    padding-bottom: 8px;
}

/* Estatísticas minimalistas */
QWidget#minimal_stat_widget {
    background: transparent;
}

QLabel#minimal_stat_value {
